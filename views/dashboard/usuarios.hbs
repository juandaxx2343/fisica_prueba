<!DOCTYPE html>
<html lang="es">

<head>

    {{>head}}

</head>

<body>

    <div class="site-wrap">
        <header class="site-navbar" role="banner">
            {{>headerDash}}
        </header>

        <div class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong
                            class="text-black">Nuevo Usuario</strong></div>
                </div>
            </div>
        </div>

        <div class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="h3 mb-3 text-black">Crear un nuevo Usuario</h2>
                    </div>
                    <div class="col-md-12">

                        <form>
                            <div class="p-3 p-lg-12 border">
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label for="c_fname" class="text-black">Documento de identidad <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="documento" name="c_fidentifi">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="c_lname" class="text-black">Nombre completo<span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Nombre" name="c_lname">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label for="c_email" class="text-black">email <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Correo" name="c_email"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-md-8">
                                        <label for="c_lname" class="text-black">Escriba el Rol asignado<span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Rol" name="c_lrol">
                                    </div>
                                    <div class="col-md-8">
                                        <label for="c_lname" class="text-black">Escriba los permisos asociados<span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Permisos" name="c_lpermiso">
                                    </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="c_email" class="text-black">Contrase√±a <span
                                                class="text-danger">*</span></label>
                                        <input type="password" class="form-control" id="Contra" name="c_contra"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                            <button class="btn btn-primary btn-lg btn-block" id="boton"> Guardar </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <footer class="site-footer border-top">
            {{>footer}}
        </footer>
    </div>
  <script src="assets/js/validarform.js"></script>

</body>
</html>